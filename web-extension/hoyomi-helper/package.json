{
  "name": "hoyomi-helper",
  "displayName": "Vitesse WebExt",
  "version": "0.0.1",
  "private": true,
  "description": "[description]",
  "scripts": {
    "dev": "bun run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev-firefox": "bun run clear && cross-env NODE_ENV=development EXTENSION=firefox run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:background": "bun run build:background -- --mode development",
    "dev:web": "vite",
    "dev:js": "bun run build:js -- --mode development",
    "build": "cross-env NODE_ENV=production run-s clear build:prepare build:background build:js build:js-inject",
    "build:prepare": "esno scripts/prepare.ts",
    "build:background": "vite build --config vite.config.background.mts",
    "build:js": "vite build --config vite.config.content.mts",
    "build:js-inject": "vite build --config vite.config.content-inject.mts",
    "pack": "cross-env NODE_ENV=production run-p pack:*",
    "pack:zip": "rimraf extension.zip && jszip-cli add extension/* -o ./extension.zip",
    "pack:crx": "crx pack extension -o ./extension.crx",
    "pack:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build --source-dir ./extension --filename extension.xpi --overwrite-dest",
    "start:chromium": "web-ext run --source-dir ./extension --target=chromium",
    "start:firefox": "web-ext run --source-dir ./extension --target=firefox-desktop",
    "clear": "rimraf --glob extension/dist extension/manifest.json",
    "test": "vitest --run",
    "test:e2e": "playwright test",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@ffflorian/jszip-cli": "^3.7.1",
    "@iconify/json": "^2.2.239",
    "@playwright/test": "^1.46.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.5.0",
    "@types/webextension-polyfill": "^0.12.0",
    "@unocss/reset": "^0.62.2",
    "@vitejs/plugin-vue": "^5.1.2",
    "@vue/compiler-sfc": "^3.4.38",
    "@vue/test-utils": "^2.4.6",
    "@vueuse/core": "^11.0.1",
    "chokidar": "^3.6.0",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "esno": "^4.7.0",
    "fs-extra": "^11.2.0",
    "jsdom": "^24.1.1",
    "kolorist": "^1.8.0",
    "lint-staged": "^15.2.9",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "unocss": "^0.62.2",
    "unplugin-auto-import": "^0.18.2",
    "unplugin-icons": "^0.19.2",
    "unplugin-vue-components": "^0.27.4",
    "vite": "^5.4.2",
    "vitest": "^2.0.5",
    "vue": "^3.4.38",
    "vue-demi": "^0.14.10",
    "web-ext": "^8.2.0",
    "webextension-polyfill": "^0.12.0"
  },
  "dependencies": {
    "webext-bridge": "^6.0.1"
  }
}
